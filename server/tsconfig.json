{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "src",
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__test__"]
}
